<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RequestEvent">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/relativefr"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:background="@drawable/sign_background">
        </RelativeLayout>
    </FrameLayout>
    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/bgback2">
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relative2"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/bgback">
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativ3"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@drawable/sign_background">

        <ImageView
            android:id="@+id/Img_logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/header" />
    </RelativeLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="150dp"
            app:cardBackgroundColor="#00FFFFFF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:background="@drawable/cardview"
            android:padding="20dp">

        <ImageView
            android:id="@+id/imgView_teamIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#0D74C7"
            android:padding="8dp"
            android:src="@drawable/img_user"
            android:tint="@color/white" />

        <EditText
            android:id="@+id/Et_ED_teamname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imgView_teamIcon"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imgView_teamIcon"
            android:background="@color/editTextBG"
            android:hint="Team name"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:textSize="15sp" />


        <ImageView
            android:id="@+id/imgView_date"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/imgView_teamIcon"
            android:background="#0D74C7"
            android:padding="8dp"
            android:src="@drawable/img_authentication"
            android:tint="@color/white" />

        <EditText
            android:id="@+id/Et_ED_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Et_ED_teamname"
            android:layout_alignBottom="@+id/imgView_date"
            android:layout_toRightOf="@+id/imgView_date"
            android:background="@color/editTextBG"
            android:hint="Enter date"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imgView_time"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/imgView_date"
            android:background="#0D74C7"
            android:padding="8dp"
            android:src="@drawable/img_authentication"
            android:tint="@color/white" />

        <EditText
            android:id="@+id/Et_ED_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Et_ED_date"
            android:layout_alignBottom="@+id/imgView_time"
            android:layout_toRightOf="@+id/imgView_time"
            android:background="@color/editTextBG"
            android:hint="Enter time"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:textSize="15sp" />

            <ImageView
                android:id="@+id/imgView_venue"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@id/imgView_time"
                android:background="#0D74C7"
                android:padding="8dp"
                android:src="@drawable/img_authentication"
                android:tint="@color/white" />

            <EditText
                android:id="@+id/Et_ED_venue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Et_ED_time"
                android:layout_alignBottom="@+id/imgView_venue"
                android:layout_toRightOf="@+id/imgView_venue"
                android:background="@color/editTextBG"
                android:hint="Enter venue"
                android:inputType="text"
                android:paddingLeft="20dp"
                android:textSize="15sp" />


            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Et_ED_venue"
                android:layout_marginStart="130dp"
                android:layout_marginTop="15dp"
                android:background="#0D74C7"
                android:fontFamily="sans-serif-medium"
                android:text="CONFIRM"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Et_ED_venue"
                android:layout_toRightOf="@id/btn_confirm"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:background="#0D74C7"
                android:fontFamily="sans-serif-medium"
                android:text="Cancel"
                android:textColor="@color/white" />



        </RelativeLayout>
        </android.support.v7.widget.CardView>


    </FrameLayout>
