<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/relativefr"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:background="@drawable/sign_background">
            </RelativeLayout>
        </FrameLayout>
        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/bgback2">
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relative2"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/bgback">
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relativ3"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="@drawable/sign_background">

            <ImageView
                android:id="@+id/Img_logo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:src="@drawable/header" />

        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="200dp"
            app:cardBackgroundColor="#00FFFFFF">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:background="@drawable/cardview"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/team_img"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_camera_alt_black_24dp" />

                <TextView
                    android:id="@+id/addphoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/team_img"
                    android:layout_centerHorizontal="true"
                    android:text="Add photo"
                    android:textColor="#fff"
                    android:textSize="25dp" />

                <ImageView
                    android:id="@+id/imgView_userIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="#0D74C7"
                    android:padding="8dp"
                    android:layout_below="@id/addphoto"
                    android:src="@drawable/img_user"
                    android:tint="@color/white" />

                <EditText
                    android:id="@+id/Et_sign_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imgView_userIcon"
                    android:layout_below="@id/addphoto"
                    android:layout_toRightOf="@+id/imgView_userIcon"
                    android:background="@color/editTextBG"
                    android:hint="Team name"
                    android:inputType="text"
                    android:paddingLeft="20dp"
                    android:textSize="15sp" />


                <ImageView
                    android:id="@+id/imgView_address"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/imgView_userIcon"
                    android:background="#0D74C7"
                    android:padding="8dp"
                    android:src="@drawable/ic_home"
                    android:tint="@color/white" />

                <EditText
                    android:id="@+id/Et_sign_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Et_sign_username"
                    android:layout_alignBottom="@+id/imgView_address"
                    android:layout_toRightOf="@+id/imgView_address"
                    android:background="@color/editTextBG"
                    android:hint="Address"
                    android:inputType="textPostalAddress"
                    android:paddingLeft="20dp"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/imgView_emailIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/imgView_address"
                    android:background="#0D74C7"
                    android:padding="8dp"
                    android:src="@drawable/img_email"
                    android:tint="@color/white" />

                <EditText
                    android:id="@+id/Et_sign_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Et_sign_address"
                    android:layout_alignBottom="@+id/imgView_emailIcon"
                    android:layout_toRightOf="@+id/imgView_emailIcon"
                    android:background="@color/editTextBG"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="20dp"
                    android:textSize="15sp" />


                <ImageView
                    android:id="@+id/imgView_contact"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/imgView_emailIcon"
                    android:background="#0D74C7"
                    android:padding="8dp"
                    android:src="@drawable/ic_action_cellno"
                    android:tint="@color/white" />

                <EditText
                    android:id="@+id/Et_sign_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Et_sign_email"
                    android:layout_alignBottom="@+id/imgView_contact"
                    android:layout_toRightOf="@+id/imgView_contact"
                    android:background="@color/editTextBG"
                    android:hint="Contact"
                    android:inputType="number"
                    android:paddingLeft="20dp"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/imgView_captain"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/imgView_contact"
                    android:background="#0D74C7"
                    android:padding="8dp"
                    android:src="@drawable/ic_profile"
                    android:tint="@color/white" />

                <EditText
                    android:id="@+id/Et_sign_Captain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Et_sign_contact"
                    android:layout_alignBottom="@+id/imgView_captain"
                    android:layout_toRightOf="@+id/imgView_captain"
                    android:background="@color/editTextBG"
                    android:hint="Captain name"
                    android:inputType="text"
                    android:paddingLeft="20dp"
                    android:textSize="15sp" />

                <CheckBox
                    android:id="@+id/chkBox1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Et_sign_Captain"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="30dp"
                    android:checked="false"
                    android:fontFamily="sans-serif"
                    android:text="I agree to the Terms of Service"
                    android:textColor="@color/textColor" />

                <Button
                    android:id="@+id/btn_addteam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/chkBox1"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="30dp"
                    android:background="#0D74C7"
                    android:fontFamily="sans-serif-medium"
                    android:text="Add team"
                    android:textColor="@color/white" />



            </RelativeLayout>


        </android.support.v7.widget.CardView>
    </RelativeLayout>
</ScrollView>
