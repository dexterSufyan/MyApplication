<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="18dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#17556677"
        app:cardCornerRadius="8dp"
        app:cardElevation="15dp"
        app:contentPadding="18dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ground_profile_img"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:elevation="1dp"
                android:src="@drawable/img_profile" />

            <TextView
                android:id="@+id/text_groundname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ground_profile_img"
                android:layout_marginTop="10dp"
                android:text="Text"
                android:textColor="#090808"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/text_groundAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_groundname"
                android:layout_marginTop="10dp"
                android:text="Text"
                android:textColor="#090808"
                android:textSize="20sp" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>